{
  "name": "text-polish-agent",
  "version": "0.2.0",
  "description": "桌面文字優化助手 - 通過 AI Agent 協助優化和翻譯文字",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main:watch\" \"npm run dev:electron\"",
    "dev:desktop": "concurrently -k \"npm run dev:main:watch\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on dist/main/main.js tcp:5173 && electronmon .",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "npm run test:unit && npm run test:integration && npm run test:property && npm run test:e2e",
    "test:unit": "vitest run --config vitest.unit.config.ts --passWithNoTests",
    "test:integration": "vitest run --config vitest.integration.config.ts --passWithNoTests",
    "test:property": "vitest run --config vitest.property.config.ts --passWithNoTests",
    "test:e2e": "vitest run --config vitest.e2e.config.ts --passWithNoTests",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "build": {
    "appId": "com.textpolish.agent",
    "productName": "Text Polish Agent",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electronmon": "^2.0.2",
    "fast-check": "^3.23.2",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.1"
  }
}
